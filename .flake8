[flake8]
max-line-length = 88
extend-ignore = 
    E203,
    E266,
    E501,
    W503
select = B,C,E,F,I,W,T4,B9,D,TI,ABS
max-complexity = 12
docstring-convention = google
# Import order style
import-order-style = google
# Require absolute imports
require-absolute-imports = true
per-file-ignores =
    __init__.py:F401,D104
    tests/*:D100,D101,D102,D103,D104
    scripts/*:D100,D103
exclude =
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    htmlcov
